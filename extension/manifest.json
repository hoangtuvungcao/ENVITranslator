{
  "manifest_version": 3,
  "name": "ENVI Translator",
  "version": "1.0.0",
  "description": "Translate text via local ENVI Translator",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_title": "Translate via ENVI",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "options_page": "options.html"
}
